@page
@model ReadingLog.App.Pages.Books.ListModel
@{
    ViewData["Title"] = "Books";
}

<h3>Books</h3>

<form method="GET">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"/>
            <div class="input-group-append">
                <button class="btn btn-outline-dark">Search</button>
            </div>
        </div>
    </div>
</form>

<table class="table table-sm table-hover" id="data-table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th># Days</th>
        </tr>
    </thead>
    @foreach (var book in Model.Books)
    {
        <tr onclick="location.href = '@(Url.Page("Edit", new { bookId = book.Id}))'" style="cursor:pointer">
            <td>@book.Title</td>
            <td>@Model.AuthorNames[@book.AuthorId]</td>
            <td>@book.Status</td>
            <td>@(book.StartDate != @DateTime.MinValue ? book.StartDate.ToString("dd-MM-yyyy") : "")</td>
            <td>@(book.EndDate != @DateTime.MinValue ? book.EndDate.ToString("dd-MM-yyyy") : "")</td>
            <td>@(book.DaysReading != @TimeSpan.MinValue ? book.DaysReading.Days : "")</td>
        </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-sm btn-primary">Add New</a>

